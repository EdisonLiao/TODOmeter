<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.ToDometer" parent="Theme.Material3.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorSecondary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>
        <item name="colorOutline">@color/material_on_surface_stroke</item>
        <item name="android:colorBackground">@color/colorBackground</item>

        <item name="textAppearanceOverline">@style/TextAppearance.ToDometer.Overline</item>

        <item name="shapeAppearanceSmallComponent">
            @style/ShapeAppearance.ToDometer.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.ToDometer.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">
            @style/ShapeAppearance.ToDometer.LargeComponent
        </item>

        <item name="materialCardViewStyle">@style/Widget.ToDometer.CardView</item>
        <item name="actionBarStyle">@style/Widget.MaterialComponents.ActionBar.Surface</item>

        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>

        <item name="textInputStyle">@style/Widget.ToDometer.TextInput</item>
        <item name="android:elegantTextHeight">true</item>

        <!-- Material3 -->
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.ToDometer.Material3.DisplayLarge</item>
        <item name="textAppearanceDisplayMedium">@style/TextAppearance.ToDometer.Material3.DisplayMedium</item>
        <item name="textAppearanceDisplaySmall">@style/TextAppearance.ToDometer.Material3.DisplaySmall</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.ToDometer.Material3.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.ToDometer.Material3.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.ToDometer.Material3.HeadlineSmall</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.ToDometer.Material3.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.ToDometer.Material3.TitleMedium</item>
        <item name="textAppearanceTitleSmall">@style/TextAppearance.ToDometer.Material3.TitleSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.ToDometer.Material3.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.ToDometer.Material3.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.ToDometer.Material3.BodySmall</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.ToDometer.Material3.LabelLarge</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.ToDometer.Material3.LabelMedium</item>
        <item name="textAppearanceLabelSmall">@style/TextAppearance.ToDometer.Material3.LabelSmall</item>

        <item name="floatingActionButtonSurfaceStyle">@style/Widget.ToDometer.FloatingActionButton.Surface</item>
    </style>

    <style name="Theme.ToDometer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
